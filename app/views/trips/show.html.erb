<div class="flex flex-col w-full">
    <h1 class="text-2xl font-semibold text-gray-900"><%= @trip.destination %></h1>
    <p class="mt-2 text-sm text-gray-500">Organisé par : <%= @trip.user.name %> (<%= @trip.user.email %>)</p>

    <div class="mt-4">
        <h2 class="text-xl font-semibold text-gray-900">Dates</h2>
        <p class="mt-2 text-sm text-gray-500">Début : <%= @trip.start_date %></p>
        <p class="mt-2 text-sm text-gray-500">Fin : <%= @trip.end_date %></p>
    </div>

    <div class="mt-4">
        <h2 class="text-xl font-semibold text-gray-900">Description</h2>
        <p class="mt-2 text-sm text-gray-500"><%= @trip.description %></p>
    </div>

    

    <div class="flex justify-end items-center mt-6 space-x-4">
    <%= link_to 'Modifier', edit_trip_path(@trip), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to 'Supprimer', @trip, method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
</div>
</div>